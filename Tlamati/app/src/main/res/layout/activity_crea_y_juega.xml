<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context=".CreaYJuegaActivity">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/et1"
            android:layout_width="202dp"
            android:layout_height="62dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/escribirnombre"
            android:inputType="textPersonName" />

        <ImageView
            android:id="@+id/im1"
            android:layout_width="85dp"
            android:layout_height="73dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/botonregreso" />

        <ImageView
            android:id="@+id/im2"
            android:layout_width="82dp"
            android:layout_height="75dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/botonjuego" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="219dp"
            android:layout_height="369dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="280dp"
            app:srcCompat="@drawable/monito2" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="162dp"
            android:layout_height="144dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="470dp"
            app:srcCompat="@drawable/traje5" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="265dp"
            android:layout_height="207dp"
            android:layout_marginStart="77dp"
            android:layout_marginTop="195dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et1"
            app:srcCompat="@drawable/gorra4" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="39dp"
            android:layout_height="73dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="380dp"
            app:srcCompat="@drawable/botonsiguiente" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/im1"
            app:srcCompat="@drawable/botonsiguienteizq" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="39dp"
            android:layout_height="69dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="500dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            app:srcCompat="@drawable/botonsiguienteizq" />
    </RelativeLayout>


</LinearLayout>