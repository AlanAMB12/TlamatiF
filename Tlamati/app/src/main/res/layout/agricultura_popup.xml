<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:padding="5dp"
    android:layout_gravity="center"
    >

    <ImageView
        android:layout_width="345dp"
        android:layout_height="464dp"
        android:background="@mipmap/boton_agricultura_large"
        app:layout_editor_absoluteX="1dp"
        app:layout_editor_absoluteY="1dp"
        />

    <ImageView
        android:id="@+id/txtclose_agricultura"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="end"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="275dp"
        android:background="@mipmap/boton_cerrar"
        android:gravity="center"
        android:textColor="@color/cruz"
        android:textStyle="bold"
        />

    <GridView
        android:id="@+id/gridview_agri"
        android:layout_width="307dp"
        android:layout_height="340dp"
        android:layout_below="@id/txtclose_agricultura"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"

        android:horizontalSpacing="1dp"
        android:numColumns="1"
        android:verticalSpacing="1dp">

    </GridView>


</RelativeLayout>